generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model instructor {
  id           Int      @unique @default(autoincrement())
  firstName    String
  lastName     String
  password     String
  PasswordCode String?
  isConfirmed  Boolean? @default(false)
  phone        String?
  email        String   @unique
  roles        Role   @default(Admin)
}

enum Role     {
  Admin
  Moderator
  User
  Instructor
}

model student {
  id           Int      @unique @default(autoincrement())
  firstName    String
  lastName     String
  password     String
  PasswordCode String?
  isConfirmed  Boolean? @default(false)
  phone        String?
  email        String   @unique
}
