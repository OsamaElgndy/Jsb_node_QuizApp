generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model instructor {
  id           Int      @unique @default(autoincrement())
  firstName    String
  lastName     String
  password     String
  PasswordCode String?
  isConfirmed  Boolean? @default(false)
  phone        String?
  email        String   @unique
  roles        Role   @default(Instructor)
  courses      course[]
}

enum Role     {
  Admin
  Moderator
  User
  Instructor
}

model student {
  id           Int      @unique @default(autoincrement())
  firstName    String
  lastName     String
  password     String
  PasswordCode String?
  isConfirmed  Boolean? @default(false)
  phone        String?
  email        String   @unique
    roles        Role   @default(User)
}

model  course {
  id Int @unique @default(autoincrement())
  name String
  description String
  instructorId Int
  instructor   instructor @relation(fields: [instructorId], references: [id])
 imgUrl String?
 photoUrl String?
 videoUrl String?
 
}